{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "public/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2017","dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    // "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    // "noUnusedLocals": true,
    "paths": {
      "@app/*": ["src/*"],
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "webpack",
  ]
}
